@model Product

<table class="table table-striped table-primary">
    <tr>
        <th>Name</th>
        <th>Stock</th>
        <th>Price</th>
        <th>Image</th>
        <th>ReleaseDate</th>
        <th>Company</th>
        <th>Category</th>
    </tr>

    <tr>
        <td>@Model.Name</td>
        <td>@Model.Stock</td>
        <td>@Model.Price</td>
        <td> <img style="width: 200px" src="@Model.Image" /></td>
        <td>@Model.ReleaseDate</td>
        <td>@Model.Company.Name</td>
        <td>@Model.Category.Name</td>
    </tr>
</table>