@model Product

<form asp-controller="Product" asp-action="Update">

  <div class="form-row">
    <input hidden value="@Model.ID" asp-for="ID"/>
    <input hidden value="@Model.ReleaseDate" asp-for="ReleaseDate"/>
    <input hidden value="@Model.CompanyID" asp-for="CompanyID"/>
    <input hidden value="@Model.CategoryID" asp-for="CategoryID"/>
    <input hidden value="@Model.UserID" asp-for="UserID"/>

    <div class="form-group col-md-6">
      <label for="inputEmail4">Product Name</label>
      <input type="text" class="form-control" placeholder="Name" asp-for="Name">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Stock</label>
      <input type="text" class="form-control" placeholder="Stock" asp-for="Stock">
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress2">Price</label>
    <input type="text" class="form-control" placeholder="Price" asp-for="Price">
  </div>
  <div class="form-group">
    <label for="inputAddress2">Image</label>
    <input type="text" class="form-control" placeholder="Image" asp-for="Image">
  </div>
  <button type="submit" class="btn btn-primary">Update Product</button>
</form>
