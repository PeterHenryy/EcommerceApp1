@model AppUser

<form asp-controller="AppUser" asp-action="RegisterAdmin">

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Admin Name</label>
      <input type="text" class="form-control" placeholder="Admin Name" asp-for="UserName">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Email</label>
      <input type="text" class="form-control" placeholder="Email" asp-for="Email">
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress2">Password</label>
    <input type="password" class="form-control" placeholder="Password" asp-for="Password">
  </div>
  <button type="submit" class="btn btn-primary">Register</button>
</form>
