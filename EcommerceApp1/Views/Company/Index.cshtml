@model IEnumerable<Company>

<a class="btn btn-primary" href="@Url.Action("Create", "Company")">Create Company</a>
<table class="table table-striped table-dark">
    <tr>
        <th>CompanyID</th>
        <th>Name</th>
        <th>Products In Stock</th>
        <th>Logo</th>
        <th>Total Sales</th>
        <th>Company Revenue</th>
        <th>Action</th>
        <th>Action</th>
    </tr>

    @foreach(var company in @Model)
    {
        <tr>
            <td>@company.ID</td>
            <td>@company.Name</td>
            <td>@company.ProductsInStock</td>
            <td> <img style="width: 200px;" src="@company.Logo"> </td>
            <td>@company.TotalSales</td>
            <td>@company.Revenue</td>
            <td> <a class="btn btn-secondary" href="@Url.Action("Update", "Company", new {companyID = company.ID})">Update</a></td>
            <td> <a class="btn btn-danger" href="@Url.Action("Delete", "Company", new {companyID = company.ID})">Delete</a></td>
        </tr>
    }

</table>