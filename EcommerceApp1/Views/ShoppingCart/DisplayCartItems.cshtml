@model IEnumerable<CartItem>

<a class="btn btn-danger" href="@Url.Action("ClearCart", "ShoppingCart")">Clear Cart</a>
@if(Model.Count() > 0)
{
    <table class="table table-striped table-dark">
        <tr>
            <th>ID</th>
            <th>CartID</th>
            <th>ProductID</th>
            <th>Quantity</th>
            <th>Product Name</th>
        </tr>

        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.CartID</td>
                <td>@item.ProductID</td>
                <td>@item.Quantity</td>
                <td>@item.Product.Name</td>
            </tr>
        }
    </table>
}
else
{
    <h1>There are no items in your cart yet!</h1>
}
